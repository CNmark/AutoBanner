<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yanyuanquan.android.banner.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yanyuanquan.android.bannerlibrary.AutoBannerLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:indicatorShape="rect" />

        <com.yanyuanquan.android.bannerlibrary.AutoBannerLayout
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            app:indicatorUnFocusColor="#374943"
            android:layout_height="200dp"
            app:indicatorFocusColor="#af9d83"
            app:indicatorShape="oval" />

        <com.yanyuanquan.android.bannerlibrary.AutoBannerLayout
            android:id="@+id/banner2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:indicatorMargin="40dp"
            app:indicatorShape="rect" />

        <com.yanyuanquan.android.bannerlibrary.AutoBannerLayout
            android:id="@+id/banner3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:indicatorClickable="true"
            app:indicatorShape="rect" />
    </LinearLayout>
</ScrollView>
